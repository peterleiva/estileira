{
  "name": "scss-framework",
  "version": "0.1.0",
  "description": "Uma arquitetura simples usando Dart Sass definindo uma estrutura de um projeto de folhas de estilos bem definido. A arquitetura também serve como uma biblioteca com ferramentas e utilitários necessários para construção de estilos usando normas de design para diferentes projetos.",
  "main": "main.scss",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "prettier": "prettier \".\"",
    "lint": "stylelint \"**.scss\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterleiva/scss-framework.git"
  },
  "keywords": [
    "framework sass",
    "scss",
    "sass"
  ],
  "author": "Peter Leiva <pleiva@id.uff.br>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peterleiva/scss-framework/issues"
  },
  "homepage": "https://github.com/peterleiva/scss-framework#readme",
  "devDependencies": {
    "breakpoint-sass": "^2.7.1",
    "modularscale-sass": "^3.0.10",
    "prettier": "^2.2.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0"
  }
}
