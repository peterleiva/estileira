{
  "name": "styles-rhythm",
  "version": "0.2.0",
  "description": "Very simple css library writen in scss with utilities and helpers for mainting your styles rhythm, color schema and so on",
  "main": "src/main.scss",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "prettier": "prettier \".\"",
    "lint": "stylelint \"**.scss\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pherval/scss-framework.git"
  },
  "keywords": [
    "framework sass",
    "scss",
    "sass"
  ],
  "author": "Peter <npmjs@peter.dev.br>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pherval/scss-framework/issues"
  },
  "homepage": "https://github.com/pherval/scss-framework#readme",
  "devDependencies": {
    "prettier": "^2.2.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "husky": "^7.0.0"
  },
  "dependencies": {
    "modularscale-sass": "^3.0.10",
    "reset-css": "^5.0.1"
  }
}
